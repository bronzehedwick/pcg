{
  "name": "pcg",
  "version": "0.0.0",
  "description": "A web-based point and click game engine.",
  "scripts": {
    "cypress:open": "npx cypress open",
    "cypress:run": "npx cypress run",
    "docs": "cd docs && make html",
    "lint": "npx eslint \"src/**/*js\"",
    "serve": "$(npm bin)/serve",
    "start": "npm run serve",
    "test": "npm start & >/dev/null 2>&1 && npm run cypress:run"
  },
  "browerslist": [
    "defaults",
    "not IE",
    "not IE_Mob"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bronzehedwick/pcg.git"
  },
  "keywords": [
    "games"
  ],
  "author": "Chris DeLuca",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bronzehedwick/pcg/issues"
  },
  "homepage": "https://github.com/bronzehedwick/pcg#readme",
  "devDependencies": {
    "cypress": "^5.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jsdoc": "^24.0.0",
    "serve": "^14.1.2"
  }
}
